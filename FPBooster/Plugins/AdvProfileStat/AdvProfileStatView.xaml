                </StackPanel>
            </DockPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,10,0">
                <StackPanel>
                    
                    <Border Style="{StaticResource PluginCard}" Margin="0,0,0,25" Background="{DynamicResource BrushPanel}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="ÐžÐ‘Ð©Ð˜Ð™ Ð‘ÐÐ›ÐÐÐ¡ (ÐŸÐ Ð˜ÐœÐ•Ð ÐÐž)" Foreground="{DynamicResource BrushSubText}" FontSize="11" FontWeight="Bold" Opacity="0.7" Margin="0,0,0,5"/>
                                <TextBlock x:Name="NowValue" Text="0 â‚½" Foreground="{DynamicResource BrushText}" FontSize="42" FontWeight="Black" FontFamily="Segoe UI">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#1100FF00" CornerRadius="10" Padding="15,10" Margin="8,0" BorderBrush="#3300FF00" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="RUB" Foreground="{DynamicResource BrushSubText}" FontSize="10" HorizontalAlignment="Center" Opacity="0.8"/>
                                        <TextBlock x:Name="RubValue" Text="0 â‚½" Foreground="#FF69F0AE" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="#FF69F0AE" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                            </TextBlock.Effect>
