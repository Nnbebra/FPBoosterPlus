                                    </StackPanel>
                                </Border>

                                <Border Background="#1100BFFF" CornerRadius="10" Padding="15,10" Margin="8,0" BorderBrush="#3300BFFF" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="USD" Foreground="{DynamicResource BrushSubText}" FontSize="10" HorizontalAlignment="Center" Opacity="0.8"/>
                                        <TextBlock x:Name="UsdValue" Text="0 $" Foreground="#FF40C4FF" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="#FF40C4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Background="#11FFD700" CornerRadius="10" Padding="15,10" Margin="8,0" BorderBrush="#33FFD700" BorderThickness="1">
