                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <WrapPanel x:Name="StatsContainer" Orientation="Horizontal"/>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="2" Style="{StaticResource PluginCard}" Padding="0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,15" LastChildFill="False">
                    <TextBlock Text="Ð–ÑƒÑ€Ð½Ð°Ð» ÑÐ¾Ð±Ñ‹Ñ‚Ð¸Ð¹" Foreground="{DynamicResource BrushText}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <Button Content="ÐžÑ‡Ð¸ÑÑ‚Ð¸Ñ‚ÑŒ" Width="70" Height="24" 
                            DockPanel.Dock="Right"
                            Click="OnClearPluginLog"
                            Style="{StaticResource PluginSecondaryButton}" FontSize="11"/>
                </DockPanel>

                <Border Grid.Row="1" Background="#15000000" CornerRadius="8" BorderBrush="{DynamicResource BrushBorder}" BorderThickness="1">
                    <ListBox x:Name="PluginLogListBox" Style="{StaticResource TransparentListBox}" Padding="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" Foreground="{Binding Color}" TextWrapping="Wrap" FontSize="11" Margin="0,3" FontFamily="Consolas"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>