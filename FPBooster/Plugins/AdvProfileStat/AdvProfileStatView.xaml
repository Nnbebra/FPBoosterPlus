                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="Ð¡Ñ‚Ð°Ñ‚Ð¸ÑÑ‚Ð¸ÐºÐ° ÐŸÑ€Ð¾Ñ„Ð¸Ð»Ñ" 
                               FontSize="26" FontWeight="Bold" 
                               Foreground="{DynamicResource BrushText}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="{DynamicResource ColorAccent}" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <Border Background="#15FFFFFF" CornerRadius="6" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="PluginStatus" Text="Wait" Foreground="{DynamicResource BrushSubText}" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
