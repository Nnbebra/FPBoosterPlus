<UserControl x:Class="FPBooster.Plugins.AutoBumpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1300" d:DesignHeight="600"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             FontFamily="Segoe UI" FontSize="14" Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="PluginCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource BrushPanel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Color="#44000000" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PluginWatermarkTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource BrushText}"/>
            <Setter Property="Background" Value="{DynamicResource BrushPanelAlt}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Bd" CornerRadius="8" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource BrushAccentLight}"/>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BrushPanel}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource BrushAccentLight}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PluginPrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource BrushAccentDeep}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="B" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="B" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{DynamicResource ColorAccentLight}" BlurRadius="10" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PluginSecondaryButton" TargetType="Button" BasedOn="{StaticResource PluginPrimaryButton}">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="{DynamicResource BrushText}"/>
        </Style>

        <Style x:Key="TransparentListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource BrushText}"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="*" MinWidth="675" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource PluginCard}" Margin="10,10,5,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <DockPanel Margin="0,0,0,20" LastChildFill="False">
                        <TextBlock Text="⚡ Авто-поднятие (Local)" Foreground="{DynamicResource BrushAccentLight}" FontSize="20" FontWeight="Black" DockPanel.Dock="Left">
                             <TextBlock.Effect>
                                 <DropShadowEffect Color="{DynamicResource ColorAccentLight}" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                             </TextBlock.Effect>
                        </TextBlock>
                        
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                            <TextBlock Text="Статус:" Foreground="{DynamicResource BrushSubText}" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock x:Name="StatusText" Text="ГОТОВ" Foreground="#9CF2B2" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                    </DockPanel>

                    <Border Background="{DynamicResource BrushPanelAlt}" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="{DynamicResource BrushBorder}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Попыток" FontSize="11" Foreground="{DynamicResource BrushSubText}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtTotal" Text="0" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource BrushText}" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <Border Grid.Column="1" Width="1" Background="{DynamicResource BrushBorder}" Margin="10,2"/>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Успешно" FontSize="11" Foreground="{DynamicResource BrushSubText}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtSuccess" Text="0" FontSize="18" FontWeight="Bold" Foreground="#9CF2B2" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TextBlock Text="Настройки интервалов" FontSize="13" FontWeight="Bold" Foreground="{DynamicResource BrushText}" Margin="0,0,0,8"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Интервал (часы)" FontSize="11" Foreground="{DynamicResource BrushSubText}" Margin="0,0,0,4"/>
                            <TextBox x:Name="IntervalInput" Text="4" Style="{StaticResource PluginWatermarkTextBox}" TextAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Разброс (минуты)" FontSize="11" Foreground="{DynamicResource BrushSubText}" Margin="0,0,0,4"/>
                            <TextBox x:Name="JitterInput" Text="15" Style="{StaticResource PluginWatermarkTextBox}" TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Expander Header="⚙ Дополнительно" Foreground="{DynamicResource BrushSubText}" Margin="0,0,0,20">
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Список NodeID (только для чтения, меняется в главном меню)" FontSize="11" Foreground="{DynamicResource BrushSubText}" Margin="0,0,0,4"/>
                            <TextBox x:Name="NodesPreview" Style="{StaticResource PluginWatermarkTextBox}" Height="60" TextWrapping="Wrap" IsReadOnly="True" Opacity="0.7"/>
                        </StackPanel>
                    </Expander>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnQuick" Grid.Column="0" Content="⚡ Разовая проверка" Height="45" 
                                Click="OnQuickCheckClick" Style="{StaticResource PluginSecondaryButton}"/>
                        
                        <Button x:Name="BtnToggle" Grid.Column="2" Content="▶ ЗАПУСТИТЬ ЦИКЛ" Height="45" 
                                Click="OnToggleBumpClick" Style="{StaticResource PluginPrimaryButton}"/>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource PluginCard}" Margin="5,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <DockPanel Grid.Row="0" Margin="0,0,0,10" LastChildFill="False">
                    <TextBlock Text="Журнал операций" Foreground="{DynamicResource BrushText}" FontWeight="SemiBold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <Button Content="Очистить" Width="80" Height="26" DockPanel.Dock="Right" Click="OnClearPluginLog" Style="{StaticResource PluginSecondaryButton}" FontSize="11"/>
                </DockPanel>

                <Border Grid.Row="1" Height="1" Background="{DynamicResource BrushBorder}" Margin="0,0,0,10" Opacity="0.5"/>

                <Border Grid.Row="2" Background="#11000000" CornerRadius="8">
                    <ListBox x:Name="PluginLog" Style="{StaticResource TransparentListBox}" Padding="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" Foreground="{Binding Color}" TextWrapping="Wrap" FontSize="11" Margin="0,2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>