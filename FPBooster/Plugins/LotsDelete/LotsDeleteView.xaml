                    <DropShadowEffect BlurRadius="30" ShadowDepth="10" Color="Black" Opacity="0.8"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ÐŸÐžÐ”Ð¢Ð’Ð•Ð Ð–Ð”Ð•ÐÐ˜Ð•" Foreground="{DynamicResource BrushAccentLight}" FontSize="18" FontWeight="Black" Margin="0,0,0,10" HorizontalAlignment="Center"/>
