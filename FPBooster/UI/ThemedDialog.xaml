<Window x:Class="FPBooster.UI.ThemedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Opacity="0"
        MinWidth="460"
        MinHeight="260">

    <Border CornerRadius="20"
            Padding="28"
            Margin="16"
            SnapsToDevicePixels="True"
            Effect="{DynamicResource DropShadow}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource ColorPanelAlt}" Offset="0"/>
                <GradientStop Color="{StaticResource ColorBorder}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel>
            <TextBlock x:Name="TitleBlock"
                       Foreground="{DynamicResource BrushAccentLight}"
                       FontSize="22"
                       FontWeight="Black"
                       Margin="0,0,0,14"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="MessageBlock"
                       Foreground="{DynamicResource BrushText}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,26"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnCancel"
                        Content="ОТМЕНА"
                        Width="130"
                        Height="42"
                        Margin="0,0,15,0"
                        Click="Cancel_Click"
                        Style="{StaticResource DialogOkButton}"
                        Opacity="0.7"
                        Visibility="Collapsed"/>

                <Button x:Name="BtnOk"
                        Content="OK"
                        Width="130"
                        Height="42"
                        Click="Ok_Click"
                        Style="{StaticResource DialogOkButton}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>