                </DockPanel>
                
                <Border Grid.Row="1" Height="1" Margin="0,0,0,10" Background="{DynamicResource BrushBorder}" Opacity="0.5"/>

                <Border Grid.Row="2" CornerRadius="8" Background="#11000000">
                    <ListBox x:Name="PluginLog" Style="{StaticResource TransparentListBox}" Padding="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" Foreground="{Binding Color}" TextWrapping="Wrap" FontSize="11" Margin="0,2"/>
