<Window x:Class="FPBooster.UI.ThemedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Opacity="0"
        MinWidth="460"
        MinHeight="260">

    <Border CornerRadius="20"
            Padding="28"
            Margin="16"
            SnapsToDevicePixels="True"
            Effect="{DynamicResource DropShadow}">
        <!-- Градиентный фон -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource ColorPanelAlt}" Offset="0"/>
                <GradientStop Color="{StaticResource ColorBorder}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel>
            <TextBlock x:Name="TitleBlock"
                       Foreground="{DynamicResource BrushAccentLight}"
                       FontSize="22"
                       FontWeight="Black"
                       Margin="0,0,0,14"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="MessageBlock"
                       Foreground="{DynamicResource BrushText}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,26"/>

            <Button Content="OK"
                    Width="130"
                    Height="42"
                    HorizontalAlignment="Center"
                    Click="Ok_Click"
                    Style="{StaticResource DialogOkButton}"/>
        </StackPanel>
    </Border>
</Window>
